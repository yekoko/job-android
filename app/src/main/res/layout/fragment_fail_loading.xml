<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fail_loading_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mmitjobs.mmitjobs.fragment.FailLoadingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/fail_loading_text"
            android:text="@string/fail_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/fail_loading_button"
            android:text="@string/fail_loading_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
