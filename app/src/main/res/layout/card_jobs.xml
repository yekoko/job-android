<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel_card_top"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_card"
                android:layout_width="85dp"
                android:layout_height="85dp"
                fresco:placeholderImage="@mipmap/ic_launcher" />
            <TextView
                android:id="@+id/txt_card_jobs_name"
                android:text="Software Engineer (Java)"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/img_card"
                android:layout_toEndOf="@+id/img_card"
                android:paddingTop="2dp"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/txt_card_jobs_companyname"
                android:text="ACE DATA System"
                android:layout_below="@+id/txt_card_jobs_name"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/img_card"
                android:layout_toEndOf="@+id/img_card"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/txt_card_jobs_experience"
                android:text="Min 2 year (Senior Executive)"
                android:gravity="center_vertical"
                android:layout_below="@+id/txt_card_jobs_companyname"
                android:layout_toRightOf="@+id/img_card"
                android:layout_toEndOf="@+id/img_card"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/txt_card_jobs_salary"
                android:text="Salary: login to view salary"
                android:gravity="center_vertical"
                android:layout_below="@+id/txt_card_jobs_experience"
                android:layout_toRightOf="@+id/img_card"
                android:layout_toEndOf="@+id/img_card"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/txt_card_jobs_tag"
                android:text="Java"
                android:gravity="center_vertical"
                android:layout_below="@+id/txt_card_jobs_salary"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="15dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="17dp" />
            <TextView
                android:id="@+id/txt_card_jobs_timer"
                android:text="1 hours ago"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:layout_below="@+id/txt_card_jobs_salary"
                android:layout_marginTop="1dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="17dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/rel_card_top"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#BBBBBB"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
